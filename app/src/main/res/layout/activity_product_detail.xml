<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="addam.com.my.chinlaicustomer.feature.productdetail.ProductDetailActivity">
    <data>
        <variable
            name="viewModel"
            type="addam.com.my.chinlaicustomer.feature.productdetail.ProductDetailViewModel"/>

        <variable name="model" type="addam.com.my.chinlaicustomer.rest.model.ProductDetailResponse.Data.Product"/>

       <!-- <variable
            name="toolbarModel"
            type="addam.com.my.chinlaicustomer.utilities.model.ToolbarBackWithButtonModel"/>-->
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <!-- <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_back_with_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:model="@{toolbarModel}" />-->
        <ScrollView
            android:layout_above="@id/ll_bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ss.com.bannerslider.Slider
                    android:id="@+id/banner_slider"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:slider_selectedSlideIndicator="@drawable/round_shadow_black"
                    app:slider_unselectedSlideIndicator="@drawable/round_shadow_white"/>
                <LinearLayout
                    android:layout_below="@id/banner_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_medium_16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{model.description1}"
                        android:textSize="@dimen/large_text_18sp"
                        android:layout_marginTop="@dimen/space_small_8dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{`RM ` + model.refPrice}"
                        style="@style/BaseTextView.OpenSansBold"
                        android:textSize="@dimen/large_text_18sp"
                        android:layout_marginTop="@dimen/space_small_8dp"
                        android:textColor="@color/colorRed"/>
                    <TextView
                        android:id="@+id/tv_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Details:"
                        android:textSize="@dimen/medium_text_16sp"
                        android:layout_marginTop="@dimen/space_small_8dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_detail_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_small_8dp"
                        android:text="@{model.description2}"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/ll_bottom_panel"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/space_small_12dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:background="@drawable/blue_outline_white_bg">
                <Button
                    android:id="@+id/btn_minus"
                    android:layout_width="@dimen/space_huge_48dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:onClick="@{() -> viewModel.onMinusClick()}"
                    android:textSize="@dimen/large_text_24sp"
                    android:background="@drawable/gray_shadowed_bg"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="@dimen/space_huge_48dp"
                    style="@style/BaseTextView.OpenSansBold"
                    android:textSize="@dimen/large_text_24sp"
                    tools:text="100"
                    android:text="@{viewModel.counter +``}"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="@dimen/space_huge_48dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:onClick="@{() -> viewModel.onPlusClick()}"
                    android:textSize="@dimen/large_text_24sp"
                    android:background="@drawable/gray_shadowed_bg"/>
            </LinearLayout>
            <Button
                android:layout_alignParentEnd="true"
                android:id="@+id/btn_add_to_cart"
                android:layout_width="@dimen/space_massive_150dp"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:onClick="@{() -> viewModel.onAddToCart()}"
                android:background="@color/colorOrange"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>

</layout>

