<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		tools:context="addam.com.my.chinlaicustomer.feature.password.ResetPasswordActivity">
	
	<data>
		<variable
				name="viewModel"
				type="addam.com.my.chinlaicustomer.feature.password.ResetPasswordViewModel"/>
		<variable name="toolbarModel" type="addam.com.my.chinlaicustomer.utilities.model.ToolbarWithBackModel"/>
		<import type="android.view.View"/>
	</data>
	
	<android.support.constraint.ConstraintLayout
			android:id="@+id/main_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<android.support.constraint.Guideline
				android:id="@+id/left_guideline"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintGuide_begin="@dimen/space_large_24dp" />
		
		<android.support.constraint.Guideline
				android:id="@+id/right_guideline"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintGuide_end="@dimen/space_large_24dp" />
		<include
				android:id="@+id/toolbar"
				layout="@layout/toolbar_with_back"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="parent"
				app:model="@{toolbarModel}" />
		
		<LinearLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
				app:layout_constraintRight_toRightOf="@+id/right_guideline"
				app:layout_constraintTop_toBottomOf="@+id/toolbar"
				android:padding="@dimen/space_large_24dp">
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/BaseTextView.OpenSansSemiBold"
					android:textAlignment="textStart"
					android:textColor="@color/black"
					android:text="@string/current_password"/>
			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/space_small_8dp">
				<android.support.design.widget.TextInputLayout
						android:id="@+id/current_password"
						android:layout_width="@dimen/space_massive_200dp"
						android:layout_height="wrap_content"
						app:passwordToggleEnabled="true"
						app:passwordToggleTint="@color/black">
					<android.support.design.widget.TextInputEditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:password="true"
							android:singleLine="true"
							android:text="@={viewModel.currentPassword}"/>
				</android.support.design.widget.TextInputLayout>
				<ImageView
						android:layout_width="@dimen/default_icon_size"
						android:layout_height="@dimen/default_icon_size"
						android:layout_toEndOf="@+id/current_password"
						android:padding="@dimen/space_medium_20dp"
						android:layout_marginStart="@dimen/space_small_8dp"
						app:srcCompat="@drawable/ic_verification_mark"
						android:visibility="@{viewModel.currentPasswordVerify? View.VISIBLE:View.GONE}"/>
			</RelativeLayout>
			<View android:layout_width="match_parent"
			      android:layout_height="@dimen/space_small_8dp"
			      android:background="@color/colorGreyPrimary"/>
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/BaseTextView.OpenSansSemiBold"
					android:layout_marginTop="@dimen/space_small_8dp"
					android:textAlignment="textStart"
					android:textColor="@color/black"
					android:text="@string/new_password"/>
			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/space_small_8dp">
				<android.support.design.widget.TextInputLayout
						android:id="@+id/new_password"
						android:layout_width="@dimen/space_massive_200dp"
						android:layout_height="wrap_content"
						app:passwordToggleEnabled="true"
						app:passwordToggleTint="@color/black">
					<android.support.design.widget.TextInputEditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:password="true"
							android:singleLine="true"
							android:text="@={viewModel.newPassword}"/>
				</android.support.design.widget.TextInputLayout>
				<ImageView
						android:layout_width="@dimen/default_icon_size"
						android:layout_height="@dimen/default_icon_size"
						android:layout_toEndOf="@+id/new_password"
						android:padding="@dimen/space_medium_20dp"
						android:layout_marginStart="@dimen/space_small_8dp"
						app:srcCompat="@drawable/ic_verification_mark"
						android:visibility="@{viewModel.newPasswordVerify? View.VISIBLE:View.GONE}"/>
			</RelativeLayout>
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/BaseTextView.OpenSansSemiBold"
					android:textAlignment="textStart"
					android:textColor="@color/black"
					android:text="@string/new_password_confirm"/>
			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/space_small_8dp">
				<android.support.design.widget.TextInputLayout
						android:id="@+id/new_password_confirm"
						android:layout_width="@dimen/space_massive_200dp"
						android:layout_height="wrap_content"
						app:passwordToggleEnabled="true"
						app:passwordToggleTint="@color/black">
					<android.support.design.widget.TextInputEditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:password="true"
							android:singleLine="true"
							android:text="@={viewModel.newPasswordConfirm}"/>
				</android.support.design.widget.TextInputLayout>
				<ImageView
						android:layout_width="@dimen/default_icon_size"
						android:layout_height="@dimen/default_icon_size"
						android:layout_toEndOf="@+id/new_password_confirm"
						android:padding="@dimen/space_medium_20dp"
						android:layout_marginStart="@dimen/space_small_8dp"
						app:srcCompat="@drawable/ic_verification_mark"
						android:visibility="@{viewModel.newPasswordConfirmVerify? View.VISIBLE:View.GONE}"/>
			</RelativeLayout>
		</LinearLayout>
		
	</android.support.constraint.ConstraintLayout>
</layout>
