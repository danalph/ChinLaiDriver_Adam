<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools">
	<data>
		<variable name="model" type="addam.com.my.chinlaicustomer.utilities.model.DestinationItemModel"/>
		<import type="android.view.View"/>
	</data>
	<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/space_small_8dp"
			android:background="@color/grey_bg"
			android:orientation="horizontal">
		<ImageView
				android:id="@+id/img_logo"
				android:layout_width="@dimen/default_icon_size"
				android:layout_height="@dimen/default_icon_size"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintTop_toBottomOf="parent"
				android:layout_gravity="center"
				android:padding="@dimen/space_small_8dp"
				app:srcCompat="@{model.typeIcon}"/>
		<LinearLayout
				android:id="@+id/layout_details"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintStart_toEndOf="@id/img_logo"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintTop_toBottomOf="parent"
				android:orientation="vertical"
				android:layout_gravity="center_vertical">
			<TextView
					android:id="@+id/txt_itemId"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/BaseTextView.OpenSansBold"
					android:textSize="@dimen/medium_text_16sp"
					android:textColor="@color/black"
					android:text="@{model.itemId}"
					tools:text = "PO654321"/>
			<TextView android:layout_width="match_parent"
					  android:layout_height="wrap_content"
					  style="@style/BaseTextView.OpenSansBold"
					  android:layout_gravity="center_vertical"
					  android:layout_marginTop="@dimen/space_tiny_4dp"
					  android:maxLines="2"
					  android:textSize="@dimen/small_text_12sp"
					  android:textColor="@color/black"
					  android:text="@{model.date}"
					  tools:text="aslkadjadlakdjsaa"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/BaseTextView.OpenSansRegular"
					android:layout_marginTop="@dimen/space_tiny_4dp"
					android:layout_gravity="center_vertical"
					android:textSize="@dimen/small_text_12sp"
					android:textColor="@{model.complete? @color/colorGreen : @color/colorRed}"
					android:text="@{model.statusName}"
					tools:textColor="@color/hyperlinkRedColor"
					tools:text="INCOMPLETE"/>
		</LinearLayout>

		<LinearLayout
				android:id="@+id/layout_mark_complete"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintEnd_toStartOf="@id/layout_view_map"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintTop_toBottomOf="parent"
				android:layout_marginEnd="@dimen/space_small_8dp"
				android:layout_gravity="center_vertical"
				android:onClick="@{()-> model.onMarkCompletedClicked()}"
				android:visibility="@{model.isComplete? View.GONE: View.VISIBLE}"
		>
			<ImageView
					android:layout_width="@dimen/confirm_button_height"
					android:layout_height="@dimen/confirm_button_height"
					android:background="@drawable/rounded_button_green"
					app:srcCompat="@drawable/ic_double_tick_indicator"
					android:padding="@dimen/space_small_10dp"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/BaseTextView.RalewayRegular"
					android:layout_gravity="center"
					android:textSize="@dimen/small_text_10sp"
					android:textAlignment="center"
					android:textColor="@color/black"
					android:text="@string/mark_complete"
			/>
		</LinearLayout>

		<LinearLayout
				android:id="@+id/layout_view_map"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintEnd_toStartOf="@id/layout_update_photo"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintTop_toBottomOf="parent"
				android:layout_marginEnd="@dimen/space_small_8dp"
				android:layout_gravity="center_vertical"
				android:onClick="@{()-> model.onMapViewClicked()}"
		>
			<com.mikhaellopez.circularimageview.CircularImageView
					android:layout_width="@dimen/confirm_button_height"
					android:layout_height="@dimen/confirm_button_height"
					android:src="@drawable/ic_google_map"
					app:civ_border="false"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/BaseTextView.RalewayRegular"
					android:layout_gravity="center"
					android:textSize="@dimen/small_text_10sp"
					android:textAlignment="center"
					android:textColor="@color/black"
					android:text="@string/map_view"
			/>
		</LinearLayout>

		<LinearLayout
				android:id="@+id/layout_update_photo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintTop_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_gravity="center_vertical"
				android:onClick="@{()-> model.onUploadPhotoClicked()}">
			<ImageView
					android:layout_width="@dimen/confirm_button_height"
					android:layout_height="@dimen/confirm_button_height"
					android:background="@drawable/rounded_button_blue"
					app:srcCompat="@drawable/ic_photo_camera"
					android:padding="@dimen/space_small_10dp"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/BaseTextView.RalewayRegular"
					android:layout_gravity="center"
					android:textSize="@dimen/small_text_10sp"
					android:textAlignment="center"
					android:textColor="@color/black"
					android:text="@string/update_photo"
			/>
		</LinearLayout>
	</android.support.constraint.ConstraintLayout>
</layout>