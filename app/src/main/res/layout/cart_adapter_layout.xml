<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/space_small_12dp">
	<CheckBox
			android:id="@+id/cb_choose"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	<ImageView
			android:id="@+id/iv_product_img"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toRightOf="@id/cb_choose"
			android:layout_width="@dimen/space_extra_huge_88dp"
			android:layout_height="@dimen/space_extra_huge_88dp"/>
	<TextView
			android:id="@+id/tv_product_name"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toRightOf="@id/iv_product_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/BaseTextView.OpenSansBold"
			android:textColor="@color/black"
			android:layout_marginStart="@dimen/space_small_8dp"
			tools:text="Power Drill (4500)"/>
	<TextView
			android:id="@+id/tv_quantity_label"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toRightOf="@id/iv_product_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/BaseTextView.OpenSansRegular"
			android:textSize="@dimen/small_text_12sp"
			android:textColor="@color/black"
			android:layout_marginStart="@dimen/space_small_8dp"
			android:text="Quantity"
			tools:text="Quantity"/>
	
	<LinearLayout
			android:id="@+id/ll_quantity"
			android:layout_marginStart="@dimen/space_small_8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toRightOf="@id/tv_quantity_label"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/space_medium_20dp"
			android:orientation="horizontal"
			android:layout_centerVertical="true">
		<TextView
				android:id="@+id/btn_minus"
				android:layout_width="@dimen/space_medium_20dp"
				android:layout_height="match_parent"
				android:textSize="@dimen/medium_text_14sp"
				android:text="-"
				android:gravity="center"
				android:background="@drawable/bg_white_outline_gray"/>
		<TextView
				android:id="@+id/tv_quantity"
				android:layout_width="@dimen/space_large_24dp"
				android:layout_height="match_parent"
				style="@style/BaseTextView.OpenSansRegular"
				android:textSize="@dimen/small_text_12sp"
				tools:text="100"
				android:textColor="@color/black"
				android:background="@drawable/bg_white_outline_gray"
				android:gravity="center"/>
		<TextView
				android:id="@+id/btn_plus"
				android:layout_width="@dimen/space_medium_20dp"
				android:layout_height="match_parent"
				android:textSize="@dimen/medium_text_14sp"
				android:gravity="center"
				android:background="@drawable/bg_white_outline_gray"/>
	</LinearLayout>
	
	<ImageView
			android:id="@+id/btn_product_cancel"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:srcCompat="@drawable/ic_clear_button"
			android:layout_width="@dimen/space_medium_20dp"
			android:layout_height="@dimen/space_medium_20dp"
			android:padding="@dimen/space_tiny_4dp"/>
	
	<TextView
			android:id="@+id/tv_product_price"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toRightOf="@id/ll_quantity"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="end"
			android:textColor="@color/colorRed"
			style="@style/BaseTextView.OpenSansBold"
			android:textSize="@dimen/medium_text_16sp"
			tools:text="RM1000000.00"/>

</android.support.constraint.ConstraintLayout>
