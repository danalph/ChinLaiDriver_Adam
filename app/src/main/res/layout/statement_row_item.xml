<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>
		<variable
				name="model"
				type="addam.com.my.chinlaicustomer.rest.model.StatementResponseModel"/>
	</data>
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
			<CheckBox
					android:id="@+id/checkbox"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/default_icon_size"
					android:layout_marginStart="@dimen/space_medium_16dp"
					android:layout_marginEnd="@dimen/space_medium_16dp"
					android:layout_gravity="center"
					android:checked="@{model.selected}"/>
			<View
					android:layout_width="@dimen/space_tiny_2dp"
					android:layout_height="match_parent"
					android:background="@color/grey_medium"/>
			<android.support.constraint.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="@dimen/space_medium_16dp">
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						style="@style/BaseTextView.OpenSansSemiBold"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						android:textColor="@color/black"
						android:text="@{model.statementName}"
						tools:text="alskdajdlakdajdasdsakdl"/>
				<ImageButton
						android:id="@+id/img_download"
						android:layout_width="@dimen/default_icon_size"
						android:layout_height="@dimen/default_icon_size"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="parent"
						android:background="@android:color/transparent"
						app:srcCompat="@drawable/ic_download"/>
			</android.support.constraint.ConstraintLayout>
		</LinearLayout>
		
		<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/space_tiny_2dp"
				android:background="@color/grey_medium"/>
	</LinearLayout>
	
</layout>