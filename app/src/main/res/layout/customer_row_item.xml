<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
	<data>
		<variable
				name="model"
				type="addam.com.my.chinlaicustomer.rest.model.Customers"/>
	</data>
	
	<LinearLayout
			android:id="@+id/customer_row"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:clickable="true"
			android:focusable="true">
		<ImageView
				android:layout_width="@dimen/default_icon_size"
				android:layout_height="@dimen/default_icon_size"
				android:layout_gravity="center"
				android:padding="@dimen/space_small_8dp"
				android:tint="@color/colorRed"
				app:srcCompat="@drawable/ic_user"/>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="@dimen/space_medium_16dp"
				android:layout_gravity="center"
				android:orientation="vertical">
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/BaseTextView.OpenSansSemiBold"
					android:textColor="@color/black"
					android:textSize="@dimen/large_text_18sp"
					android:text="@{model.companyName}"
					android:textAllCaps="true"
					tools:text="laskajdlakdsj"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/BaseTextView.OpenSansSemiBold"
					android:text="@{model.roc}"
					tools:text="laskajdlakdsj"/>
			<View
					android:layout_width="match_parent"
					android:layout_height="@dimen/space_tiny_2dp"
					android:layout_marginTop="@dimen/space_small_8dp"
					android:background="@color/greyish"/>
		</LinearLayout>
	</LinearLayout>
</layout>